{
	"name": "job-hype",
	"private": true,
	"workspaces": [
		"apps/*"
	],
	"scripts": {
		"build:api": "npm ci && npm -w api run build",
		"start:api": "npm -w api run start",
		"dev:shared": "npm -w shared run build -- --watch",
		"dev:api": "npm -w api run start:dev",
		"lint": "eslint \"*/**/src/**/*.{ts,tsx}\" --fix",
		"lint:check": "eslint \"*/**/src/**/*.{ts,tsx}\"",
		"format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
		"format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
		"types:check": "tsc --noEmit -p apps/shared/tsconfig.json && tsc --noEmit -p apps/api/tsconfig.json && tsc --noEmit -p apps/frontend/tsconfig.json"
	},
	"overrides": {
		"typescript": "^5.9.3"
	},
	"devDependencies": {
		"@eslint/js": "^10.0.1",
		"eslint-config-next": "^16.1.6",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-prettier": "^5.5.5",
		"globals": "^17.3.0",
		"jiti": "^2.6.1",
		"prettier": "^3.8.1",
		"typescript-eslint": "^8.56.0"
	}
}
